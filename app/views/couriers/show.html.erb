<div class="container">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Time</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
        <th scope="col">Tracking Number & Delivery Status & Timing</th>
<!--        <th scope="col">Delivery Status</th>-->
<!--        <th scope="col">Timing</th>-->
      </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= @courier.name %></td>
      <td><%= @courier.email %></td>
      <td><%= @courier.created_at.strftime("%B %d, %Y") %></td>
      <td><%= link_to 'Edit', edit_courier_path(@courier.id) %></td>
      <td><%= link_to 'Delete', courier_path(@courier.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      <td>
          <%= render @courier.packages %>
      </td>

    </tr>
    </tbody>
  </table>

  <div class="container">
    <div class="col-md-6">
      <%= render 'packages/form' %>
    </div>
  </div>

</div>

<br>

<%= link_to 'Back', couriers_path %>