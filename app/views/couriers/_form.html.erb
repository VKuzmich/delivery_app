<h2> new courier</h2>
<div class="container">
  <%= form_for @courier do |f| %>
    <div class="col-md-3">
      <%= f.text_field :name, placeholder: "Write name", class: "form-control" %>
    </div>
    <br>
    <div class="col-md-3">
      <%= f.text_field :email, placeholder: "write email", class: "form-control" %>
    </div>
    <br>
    <div class="col-md-3">
      <%= f.submit %>
    </div>
  <% end %>
    <br>
    <div class="col-md-3"><%= link_to 'Back', couriers_path %></div>
</div>

