<div class="container">
  <div class="col-md-9">
    <h2 class="text-center">Courier</h2>
    <table class="table table-striped">
      <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Time</th>
        <th colspan=2 scope="col">Actions</th>

      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @courier.name %></td>
        <td><%= @courier.email %></td>
        <td><%= @courier.created_at.strftime("%B %d, %Y") %></td>
        <td><%= link_to 'Edit', edit_courier_path(@courier.id) %></td>
        <td><%= link_to 'Delete', courier_path(@courier.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="col-md-9">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Tracking Number</th>
          <th scope="col">Delivery Status</th>
          <th scope="col">Timing</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <%= render @courier.packages %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="col-md-9">
    <%= render 'packages/form' %>
  </div>
</div>
<br>
<%= link_to 'Back', couriers_path, class: "btn btn-primary" %>
