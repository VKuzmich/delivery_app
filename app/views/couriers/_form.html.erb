<h2> new courier</h2>
<div class="container">
  <%= form_for @courier, url: couriers_path, html: { class: "form-control"}, method: :post do |f| %>
    <div class="col-md-3">
      <%= f.text_field :name, placeholder: "Write name", class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :email, placeholder: "write email", class: "form-control" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>


